<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchase_request_document">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="o.with_context(lang=o.nomor_pr)"/>

                <div class="page">
                    <h2 class="text-center">Purchase Request Form</h2>
                    <p><h3><span t-field="doc.nomor_pr"/></h3></p>
                    <p>Tanggal Pengajuan: <span t-field="doc.tanggal_pengajuan" style="margin-left: 10px"/></p>
                    <p>Diajukan Oleh: <span t-field="doc.diajukan_oleh.name" style="margin-left: 10px"/></p>
                    <p>Status: <span t-field="doc.status" style="margin-left: 10px"/></p>

                    <t t-if="doc.product_ids">
                        <p><h5>Product</h5></p>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Qty Request</th>
                                    <th>Qty Approved</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.product_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.product.name"/></td>
                                        <td><span t-field="line.qty_request"/></td>
                                        <td><span t-field="line.qty_approved"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>